
@{
    ViewBag.Title = "Signup";
    ViewBag.bodyCSS = "signup-page";
    Layout = "~/Areas/Account/Views/Shared/_NoNav.cshtml";
}

<div class="card signup-form">

    <div class="card-head">
        <header>Signup</header>
    </div>

    <div class="card-body">

        <!-- START : SIGNUP -->

        <div id="signup" class="tab-pane form-box">

            <div class="form-group">
                <label for="username">Username :</label>
                <input name="username" type="email" class="form-control"
                       data-validate-required="true" 
                       data-validate-email="true"/>
            </div>

            <div class="form-group">
                <label for="password">Password :</label>
                <input name="password" type="password" class="form-control"
                       data-validate-required="true"
                       data-validate-length="6"/>
            </div>

            <div class="form-group">
                <label for="password">Confirm Password :</label>
                <input name="confirmPassword" type="password" class="form-control"
                       data-validate-required="true"
                       data-validate-length="6"
                       data-validate-compare="password"/>
            </div>

            <div class="form-group">
                <label for="displayName">Display Name :</label>
                <input name="displayName" type="text" class="form-control" 
                       data-validate-required="true" 
                       data-validate-length="1" />
            </div>

            <div class="form-group">
                <label><input name="acceptTerms" type="checkbox" 
                              data-validate-required="true"
                              data-validate-error-msg="required:Terms and Conditions are required."/> I Agree to the <a></a>terms &amp; conditions</a></label>
            </div>

            <div class="text-right">
                <a class="btn" href="/account/">Already have an Account?</a>
                <a class="btn btn-sm btn-primary" data-action="signup">Signup</a>
            </div>
        </div>

        <!-- START : SIGN UP -->

    </div>
</div>