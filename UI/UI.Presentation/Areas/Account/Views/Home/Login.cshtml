
@{
    ViewBag.Title = "Login";
    ViewBag.bodyCSS = "login-page";
    Layout = "~/Areas/Account/Views/Shared/_NoNav.cshtml";
}
 
<div class="card login-form">

    <div class="card-head">
        <header>Login</header>
    </div>

    <div class="card-body">

        <!-- START : LOGIN -->

        <div id="login" class="form-box">

            <div class="form-group">
                <label for="username">Username :</label>
                <input name="username" type="text" class="form-control" data-validate-required="true" />
            </div>

            <div class="form-group">
                <label for="password">Password :</label>
                <input name="password" type="password" class="form-control" data-validate-required="true" />
            </div>

            <div class="text-right">
                <a class="btn" href="/account/home/signup/">Don't have an Account?</a>
                <a class="btn btn-sm btn-primary" data-action="login">Login</a>
            </div>

        </div>

        <!-- END : LOGIN -->
         
    </div>
     
</div>